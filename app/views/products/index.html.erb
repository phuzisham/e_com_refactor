<h3>Products</h3>

<div class="row">
  <div class="section">
    <% @products.each do |product| %>
      <div class="col-sm-4">
        <h4 id="<%= product.name %>"><%= link_to 'Show', product, remote: true %></h4>
        <p id="ProdDesc<%= product.id %>"><%= product.description %></p>
        <p><%= number_to_currency product.price %></p>
        <%= form_for @order_item, remote: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!", html: { :class => 'cartAdd'  } %>
          <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
